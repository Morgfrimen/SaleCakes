<Page x:Class="SaleCakes.View.Pages.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Background="{x:Null}"
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <ListView x:Name="listOrdersView" d:ItemsSource="{d:SampleData ItemCount=5}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="№" DisplayMemberBinding="{Binding Id}" Width="50" />
                        <GridViewColumn Header="Вес" DisplayMemberBinding="{Binding Weight}" Width="50" />
                        <GridViewColumn Header="Коржи" DisplayMemberBinding="{Binding Floors}" Width="50" />
                        <GridViewColumn Header="Начинка" DisplayMemberBinding="{Binding Topping}" Width="250" />
                        <GridViewColumn Header="Дата продажи" DisplayMemberBinding="{Binding Date}" Width="100" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="100" />
                <RowDefinition />
                <RowDefinition Height="50" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
            <Button Grid.Row="6" Content="Редактировать"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Height="40"
                    Width="120" FontSize="14" FontWeight="Normal" Click="ButtonEdit_Click" />
            <Button Grid.Row="7" Content="Главное меню"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Height="40"
                    Width="120" FontSize="14" FontWeight="Normal" Click="ButtonMainMenu_Click" />
            <TextBox Grid.Row="0" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Выбран заказ №"
                     VerticalAlignment="Center" Width="115" Height="25" FontSize="14" Background="{x:Null}"
                     BorderBrush="{x:Null}" Margin="10,0,0,0" />
            <TextBox Grid.Row="0" x:Name="orderId" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Номер заказа"
                     VerticalAlignment="Center" Width="60" Height="25" FontSize="14" Background="{x:Null}"
                     BorderBrush="{x:Null}" RenderTransformOrigin="-0.368,0.695" />
            <TextBox Grid.Row="1" x:Name="weightTextBox" HorizontalAlignment="Center" TextWrapping="Wrap"
                     VerticalAlignment="Center" Height="30" Width="50" FontSize="16" />
            <TextBlock Grid.Row="1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Новый вес:"
                       VerticalAlignment="Center" Height="30" FontSize="16" Margin="10,0,0,0" />
            <TextBlock Grid.Row="2" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Новое количество коржей:"
                       VerticalAlignment="Center" Height="30" FontSize="16" Margin="10,0,0,0" />
            <TextBlock Grid.Row="3" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Новая начинка:"
                       VerticalAlignment="Center" Height="30" FontSize="16" Margin="10,0,0,0" />
            <TextBox Grid.Row="2" x:Name="floorTextBox" HorizontalAlignment="Center" TextWrapping="Wrap"
                     VerticalAlignment="Center" Height="30" Width="50" FontSize="16" Margin="185,0,0,0" />
            <TextBox Grid.Row="4" x:Name="toppingTextBox" HorizontalAlignment="Center" TextWrapping="Wrap"
                     VerticalAlignment="Top" Height="80" Width="170" FontSize="16" />
            <TextBlock Grid.Row="5" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Новая дата продажи:"
                       VerticalAlignment="Top" Height="30" FontSize="16" Margin="10,0,0,0" />
            <TextBox Grid.Row="5" x:Name="dateTextBox" HorizontalAlignment="Center" TextWrapping="Wrap"
                     VerticalAlignment="Top" Height="30" Width="105" FontSize="16" Margin="145,0,0,0" />
        </Grid>
    </Grid>
</Page>