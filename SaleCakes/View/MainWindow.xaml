<Window x:Class="SaleCakes.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:SaleCakes.Properties"
        xmlns:converters="clr-namespace:SaleCakes.Converters"
        xmlns:vm="clr-namespace:SaleCakes.ViewModel"
        xmlns:components="clr-namespace:SaleCakes.View.Components"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Кондитер"

        Height="{Binding RelativeSource={RelativeSource Self}, Path=MinHeight}"
        Width="{Binding RelativeSource={RelativeSource Self}, Path=MinWidth}"
        MinHeight="450" MinWidth="800">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <converters:ByteArrayToImageSourceConverter x:Key="ImageSourceConverter" />
    </Window.Resources>

    <Window.Background>
        <ImageBrush
            ImageSource="{Binding 
            Source={x:Static res:Resources.BackgrountMain},
            Converter={StaticResource ImageSourceConverter}}"
            Stretch="UniformToFill" />
    </Window.Background>

    <Grid>
        <components:AuthorizationComponent
            DataContext="{Binding}"
            Visibility="{Binding VisibilityAutorized}" />
        <Frame x:Name="FrameMenuPage" Visibility="{Binding VisibilityMenu}" 
               NavigationUIVisibility="Hidden" />
    </Grid>

</Window>